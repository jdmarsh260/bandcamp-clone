<% layout('./secondary/layouts/boilerplate')%>

<div class="row">

    <h1 class="text-center">Edit Collection</h1>

    <div class="col-6">

        <form action="/collections/<%=collection._id%>?_method=PUT" method="POST" novalidate class="validated-form">

            <div class="mb-3">

                <label class="form-label" for="title">Collection Title</label>
                <input class="form-control" type="text" id="title" name="collection[title]"
                    value="<%=collection.title %>" required>
            </div>

            <div class="mb-3">

                <label class="form-label" for="collection_image">Collection Image (URL)</label>
                <input class="form-control" type="text" id="collection_image" name="collection[collection_image]"
                    value="<%=collection.collection_image %>" required>

            </div>

            <div class="mb-3">
                
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description"
                    name="collection[description]" required><%= collection.description%></textarea>

            </div>

            <div class="mb-3 text-center">
                <button class="btn btn-info">Update Collection</button>
            </div>

        </form>
        
        <div class="mb-3">
        	<a href="/collections/<%= collection._id%>">Back To Collection</a>
        </div>
       
    </div>


    <div class="col-6">

        <% for(let album of collection.albums) { %>

        <div class="card mb-3">

            <img src="<%= album.album_art%>" class="card-img-top" alt="...">

            <div class="card-body text-center mb-3" id="album-card">
                <h5 class="card-title"><%= album.title %></h5>
                <p class="card-text">by <%= album.artist_name %></p>

                <form action="/collections/<%= collection._id%>/add_albums/<%= album._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-sm btn-danger">Delete</button>
                </form>
                
            </div>

        </div>

        <% } %>

    </div>
        

    </div>

</div>
