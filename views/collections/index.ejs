<% layout('./secondary/layouts/boilerplate')%>

<h1>All Collections</h1>

<div>
	<a href="/collections/new">Add Collection</a>
</div>

<% for (let collection of collections) { %>

	<div class="card mb-3">
		<div class="row">

			<div class="col-md-4">
				<img class="img-fluid" src="<%= collection.collection_image %>">
			</div>

			<div class="col-md-8">
				<div class="card-body">
					<h5 class="card-title"><%= collection.title %></h5>
					<p class="card-text"><%= collection.description %></p>
					<a class="btn btn-primary" href="/collections/<%=collection._id%>">View Collection</a>
				</div>
			</div>

		</div>
	</div>

<% } %>