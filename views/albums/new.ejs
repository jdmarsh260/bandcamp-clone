<% layout('./secondary/layouts/boilerplate')%>

<div class="row">

    <h1 class="text-center">New Album</h1>

    <div class="col-6 offset-3">

        <form action="/albums" method="POST" novalidate class="validated-form">

            <div class="mb-3">
                <label class="form-label" for="title">Album Title</label>
                <input class="form-control" type="text" id="title" name="album[title]" required>
            </div>

            <div class="mb-3">
               <label class="form-label" for="artist">Artist Name</label>
                <input class="form-control" type="text" id="location" name="album[artist_name]" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="album_art">Album Art (URL)</label>
                <input class="form-control" type="text" id="image" name="album[album_art]" required>
            </div>

            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                        aria-describedby="price-label" name="album[price]" required>
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="album[description]" required></textarea>
            </div>

            <div class="mb-3">
                <button class="btn btn-success">Add Album</button>
            </div>
            
        </form>

        <a href="/campgrounds">All Albums</a>

    </div>
</div>

